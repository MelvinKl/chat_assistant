{
  "name": "Basic Python",
  "build": { "dockerfile": "Dockerfile" },
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "Tim-Koehler.helm-intellisense",
        "ms-vscode.makefile-tools"
      ]
    }
  },
  "runArgs": [
      "--network=host",
  ],
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/nucleuscloud/devcontainer-features/helmfile:0": {}
  }
}
