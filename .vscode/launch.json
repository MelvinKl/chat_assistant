    "version": "0.2.0",
    "configurations": [
        {
            "name": "Warhammer",
            "type": "debugpy",
            "request": "attach",
            "justMyCode": false,
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/components/rag",
                    "remoteRoot": "/app/rag"
                },
                {
                    "localRoot": "${workspaceFolder}/components/base-library",
                    "remoteRoot": "/app//base-library"
                },
                {
                    "localRoot": "${workspaceFolder}/components/base-component-api",
                    "remoteRoot": "/app//base-component-api"
                }
            ]
        },
        {
            "name": "assistant",
            "type": "debugpy",
            "request": "attach",
            "justMyCode": false,
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/assistant",
                    "remoteRoot": "/app/assistant"
                },
                {
                    "localRoot": "${workspaceFolder}/components/base-library",
                    "remoteRoot": "/app//base-library"
                }
            ]
        },
        {
            "name": "home-assistant-componen",
            "type": "debugpy",
            "request": "attach",
            "justMyCode": false,
            "connect": {
                "host": "localhost",
                "port": 5680
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/components/home-assistant",
                    "remoteRoot": "/app/home-assistant"
                },
                {
                    "localRoot": "${workspaceFolder}/components/base-library",
                    "remoteRoot": "/app//base-library"
                },
                {
                    "localRoot": "${workspaceFolder}/components/base-component-api",
                    "remoteRoot": "/app//base-component-api"
                }
            ]
        }
    ]
}